<%- model_class = Post -%>
<div class="page-header">
  <% if current_user != @user %>
    <h1><%= @user.email.to_s + '\'s posts' %></h1>
  <% else %>
    <h1><%= 'Your posts' %></h1>
  <% end %>
  <% if current_user.following.include?(@user) %>
    <%= link_to "Un-follow", "#", :class => 'btn btn-success btn-xs' %>
  <% elsif current_user != @user%>
    <%= link_to "Follow", "#", :class => 'btn btn-success btn-xs' %>
  <% end %>
</div>



<% @posts.each_with_index do |post, index| %>

  <div class="post_container">
    <div class="user_display">
      <%= link_to post.user.email.split('@')[0], dashboard_posts_path(:user_id => post.user.id) %>
    </div>
    <div class="title_display">
      <%= post.title %>
    </div>
    <div class="pic_display">
      <%= image_tag(post.image.url) %>
    </div>
    <div class="date_display">
      Uploaded on: <%= post.created_at.to_date %>
    </div>
  </div>
<% end %> 